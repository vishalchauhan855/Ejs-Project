<%- include("../layout/headSection.ejs") %>
<%- include("../layout/header.ejs") %>

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold">Welcome</h1>
        <p class="text-muted fs-5 col-md-8 mx-auto">
            Explore our users and learn more about their profiles.
        </p>
    </div>

    <div class="row g-4">
        <% if (Array.isArray(allData)) { %>
            <% allData.forEach(user => { %>
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm border-0 text-center">
                        
                        <% if (user.screenShot) { %>
                            <img 
                                src="/<%= user.screenShot %>" 
                                class="card-img-top"
                                alt="<%= user.name %>"
                                style="height:250px; object-fit:cover;"
                            >
                        <% } %>

                        <div class="card-body">
                            <h5 class="card-title fw-semibold"><%= user.name %></h5>
                            <p class="card-text text-muted">User ID: <%= user.id %></p>
                            <a href="#" class="btn btn-outline-primary btn-sm px-4">
                                View Profile
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } %>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>

